<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.dromara.soul.admin.mapper.AppAuthMapper">
    <resultMap id="BaseResultMap" type="org.dromara.soul.admin.entity.AppAuthDO">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="app_name" jdbcType="VARCHAR" property="appName"/>
        <result column="access_key" jdbcType="VARCHAR" property="accessKey"/>
        <result column="secret_key" jdbcType="VARCHAR" property="secretKey"/>
        <result column="date_created" jdbcType="TIMESTAMP" property="dateCreated"/>
        <result column="date_updated" jdbcType="TIMESTAMP" property="dateUpdated"/>
        <result column="enabled" jdbcType="TINYINT" property="enabled"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, app_name,access_key,secret_key ,date_created, date_updated,enabled
    </sql>

    <insert id="insert" parameterType="org.dromara.soul.dashboard.entity.AppAuthDO">
        insert into app_auth (id,app_name,access_key ,secret_key,date_created, date_updated, enabled)
        values (
         #{id,jdbcType=VARCHAR},
         #{appName,jdbcType=VARCHAR},
         #{accessKey,jdbcType=VARCHAR},
         #{secretKey,jdbcType=VARCHAR},
         #{dateCreated,jdbcType=TIMESTAMP},
         #{dateUpdated,jdbcType=TIMESTAMP},
         #{enabled,jdbcType=TINYINT})
    </insert>

    <update id="update" parameterType="org.dromara.soul.dashboard.entity.AppAuthDO">
        update app_auth
        set  app_name = #{appName,jdbcType=VARCHAR},
        access_key = #{accessKey,jdbcType=VARCHAR},
        secret_key = #{secretKey,jdbcType=VARCHAR},
        enabled = #{enabled,jdbcType=TINYINT}
        where id = #{id,jdbcType=VARCHAR}
    </update>

    <delete id="batchDelete" parameterType="java.util.List">
        delete from app_auth where id in
        <foreach collection="ids" index="index" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </delete>

    <update id="batchEnable">
        update app_auth
        set enabled = #{enabled,jdbcType=TINYINT}
        where id in
        <foreach collection="ids" index="index" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </update>

    <select id="findById" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from app_auth
        where id = #{id,jdbcType=VARCHAR}
    </select>

    <select id="findListByQuery" parameterType="org.dromara.soul.dashboard.query.AppAuthQuery" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from app_auth
        <if test="appKey != null">
            where app_name = #{appName,jdbcType=VARCHAR}
        </if>

    </select>

    <select id="countByQuery" parameterType="org.dromara.soul.dashboard.query.AppAuthQuery"
            resultType="java.lang.Integer">
        select count(1)
        from app_auth
        <if test="appKey != null">
            where app_name = #{appName,jdbcType=VARCHAR}
        </if>
    </select>

    <select id="selectAll" resultType="org.dromara.soul.dashboard.entity.AppAuthDO" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from app_auth
    </select>
</mapper>